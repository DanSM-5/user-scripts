#!/usr/bin/env bash

[[ -v debug ]] && set -x

if [ "$*" = '-' ]; then
  token="$(cat)"
else
  token="$*"
fi


# Get second segment padded with 4 = signs
awk -F '.' '{ print $2"====" }' <<< "$token" |
  # split and remove last line. Will preserve required padding
  fold -w 4 | sed '$ d' | tr -d '\n' |
  base64 --decode

